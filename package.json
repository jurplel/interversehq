{
  "name": "interversehq",
  "description": "Interverse Website",
  "dependencies": {
    "bulma": "^0.9.1",
    "node-sass": "^4.12.0"
  },
  "scripts": {
    "scss:main": "node-sass assets/css -o assets/css --source-map true",
    "scss:qview": "node-sass qview/assets/css -o qview/assets/css --source-map true",
    "scss": "npm run scss:main && npm run scss:qview",
    "scss:watch": "npm run scss:main -- -w & npm run scss:qview -- -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jurplel/interversehq.git"
  },
  "author": "jurplel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jurplel/interversehq/issues"
  }
}
